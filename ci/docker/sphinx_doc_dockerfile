FROM mambaorg/micromamba:latest

# Installing make
USER root
RUN apt-get update && apt-get install -y --no-install-recommends make
USER $MAMBA_USER

COPY --chown=$MAMBA_USER:$MAMBA_USER ci/envs/environment-doc.yaml /tmp/environment-doc.yaml
RUN micromamba install -y -n base -f /tmp/environment-doc.yaml && \
    micromamba clean --all --yes

ARG MAMBA_DOCKERFILE_ACTIVATE=1

COPY --chown=$MAMBA_USER:$MAMBA_USER . /pommes
WORKDIR /pommes

# Installing the pommes package
RUN pip install .[docs,notebooks,visualisation] && cd docs && make html